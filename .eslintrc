{
  "root": true,
  "extends": [
    "eslint:recommended",
    "react-app",
    "plugin:promise/recommended",
    "prettier",
    "prettier/react"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module"
  },
  "plugins": ["prettier", "promise"],
  "env": {
    "es6": true,
    "browser": true
  },
  "rules": {
    "no-console": [
      "error",
      {
        "allow": ["info", "warn", "error"]
      }
    ],
    "no-param-reassign": [
      "error",
      {
        "props": true,
        "ignorePropertyModificationsFor": ["event", "result"]
      }
    ],
    "no-shadow": [
      "error",
      {
        "builtinGlobals": true,
        "allow": ["event", "id", "name", "props", "value"]
      }
    ],
    "no-var": "error",
    "prefer-const": "error",
    "prettier/prettier": "error",
    "promise/catch-or-return": "off",
    "quotes": ["error", "single"]
  }
}
